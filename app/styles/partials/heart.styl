.heart-container
  margin: 20px
  margin-top: 50px !important
  width: 100px
  height: 90px
  animation: pulse 1s ease-in-out infinite
  &__heart
    position: relative
    width: 100px
    height: 90px
    &:before,
    &:after
      position: absolute
      content: ""
      left: 50px
      top: 0
      width: 50px
      height: 80px
      background: #002FA7
      border-radius: 50px 50px 0 0
      transform: rotate(-45deg)
      transform-origin: 0 100%
    &:after
      left: 0
      transform: rotate(45deg)
      transform-origin: 100% 100%

@keyframes pulse
  0%
    transform: scale(1)
  20%
    transform: scale(1.1)
  45%
    transform: scale(1.5)
  55%
    transform: scale(1.2)
  62%
    transform: scale(1.5)
  100%
    transform: scale(1)
