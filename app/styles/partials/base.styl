/**
 * Basics
 */

*, *:before, *:after
  box-sizing: border-box

html, body
  font-family: sans-serif
  font-size: 100%
  line-height: 1.333
  height: 100%
  width: 100%
  color: #333

.container
  height: 100%
  width: 100%
  display: flex
  flex-direction: column
  align-items: center
  padding: 20px
  text-align: center

  div
    margin: 5px

  .heading
    font-family: 'Dancing Script', cursive
    font-weight: 300
    font-size: 6vw

  .value
    font-family: 'Roboto', sans-serif
    font-weight: 300
    font-size: 8vw
    &--since
      border-bottom: 1px solid #333
    &--for-days
      font-size: 10vw
      border-bottom: 1px solid #333
